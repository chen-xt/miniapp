
.navbar{
    background: #fff;
    text-align: center;
    padding: 0 0.5%;
}
.navbar .item{
    display: inline-block;
    width: 31%;
    margin: 0 1%;
    line-height: 80rpx;
    color: #212121;
    font-size: 30rpx;
}
.navbar .item.active{
    color: #f9861b;
    border-bottom: 4rpx solid #f9861b;
}
.packageList{
    margin: 30rpx 35rpx;
    padding-bottom: 20rpx;
    background: #fff;
    box-shadow: 0px 2px 7px 0px rgba(154, 154, 154, 0.43);
}
.packageList image{
    width: 100%;
    height: 325rpx;
    display: block;
}
.packageList>text{
    padding: 10rpx 20rpx;
    color: #000;
    line-height: 75rpx;
    font-size: 34rpx;
}
.packageList view{
    padding-left: 20rpx;
    color: #616161;
    font-size: 30rpx;
}
.packageList view text{
    color: #fc850e;
    font-size: 34rpx;
}


