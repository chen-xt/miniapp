.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
    width: 100%;
    height: 100%;
}
.page-section{
    padding: 0;
}
.hide{
    display: none;
}
button{
    background: none;
    outline: none;
    border: none;
}
button::after{ 
    border: none;
}